<div id="<%= dom_id brewery %>">
  <p><h2> <%= brewery.name %></h2></p>

  <p><i>Established in <%= brewery.year %></i></p>

  <p>Beers count: <%= brewery.beers.count %> </p>

  <p>
   <% brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer_path(beer.id) %>
   <% end %>
  </p>

  <p>
    <% if brewery.ratings.empty? %>
    <% else %>
     The brewery has <%= pluralize(brewery.ratings.count, 'rating') %> with an average of <%= brewery.average_rating %>
    <% end %>
  </p>

</div>
